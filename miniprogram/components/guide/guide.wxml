<view class="guide">
  <view class="line top" style="top: {{top}}px" wx:if="top !== 0"></view>
  <view class="line right" style="left: {{right}}px" wx:if="right !== 0"></view>
  <view class="line bottom" style="top: {{bottom}}px;" wx:if="bottom !== 0"></view>
  <view class="line left" style="left: {{left}}px" wx:if="left !== 0"></view>
</view>
