<!--miniprogram/pages/demo/index.wxml-->
<view class="main">
  <dragable 
    left="{{drag.left}}" 
    top="{{drag.top}}" 
    width="{{drag.width}}" 
    height="{{drag.height}}" 
    gap="{{drag.gap}}" 
    rects="{{grids}}"
    binddragging="onDragging"
    binddragstart="onDragStart"
    binddragend="onDragEnd"
  />
  <grid 
    span="{{grid.span}}" 
    gutter="{{grid.gutter}}" 
    width="{{grid.width}}" 
    padding="{{grid.padding}}"
    bindloaded="onGridLoaded"
  />
  <guide
    wx:if="{{showGuide}}"
    left="{{guide.left}}"
    right="{{guide.right}}"
    top="{{guide.top}}"
    bottom="{{guide.bottom}}"
    center="{{guide.center}}"
    middle="{{guide.middle}}"
  />
</view>
