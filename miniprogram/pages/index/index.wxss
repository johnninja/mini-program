.container {
  height: 100vh;
  background-color: darkgray;
  overflow: hidden;
}
.main {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.controllers {
  margin-top: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 40rpx;
  padding-right: 40rpx;
}
.canvas {
  display: flex;
  justify-content: center;
  background-color: rgb(175, 175, 175);
  border-radius: 10rpx;
  border-top: 10rpx solid #000;
  border-bottom: 10rpx solid #000;
  border-left: 5rpx solid #000;
  border-right: 5rpx solid #000;
}
/* #canvas {
