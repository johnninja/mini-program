.moves {
  padding: 10rpx;
  position: relative;
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  box-shadow: 0px 2px 2px rgba(255, 255, 255, 0.4), 0px -2px 2px rgba(0, 0, 0, 0.4);
}
.button {
  position: absolute;
  background-color: #333333;
  box-shadow: -3px 3px 8px rgba(0, 0, 0, 0.2) inset, 3px -3px 8px rgba(255, 255, 255, 0.2) inset;
}
.button.left {
  width: 80rpx;
  height: 60rpx;
  left: 20rpx;
  top: 50%;
  margin-top: -30rpx;
}
.button.right {
  width: 80rpx;
  height: 60rpx;
  right: 20rpx;
  top: 50%;
  margin-top: -30rpx;
}
.button.top {
  width: 60rpx;
  height: 80rpx;
  left: 50%;
  top: 20rpx;
  margin-left: -30rpx;
}
.button.bottom {
  width: 60rpx;
  height: 80rpx;
  left: 50%;
  bottom: 20rpx;
  margin-left: -30rpx;
}
.fight {
  position: relative;
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
  width: 250rpx;
  height: 100rpx;
  box-shadow: 0px 2px 2px rgba(255, 255, 255, 0.4), 0px -2px 2px rgba(0, 0, 0, 0.4);
  border-radius: 100rpx;
  transform: rotate(-45deg);
}
.button_a,
.button_b {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  box-shadow: -5px 5px 3px -3px rgba(255, 255, 255, 0.3) inset, 5px -5px 3px -3px rgba(0, 0, 0, 0.3) inset, 0 0 1px 1px rgba(0, 0, 0, 0.3), -5px 5px 2px -1px rgba(0, 0, 0, 0.7);
}
.button_a:active,
.button_b:active {
  box-shadow: -5px 5px 3px -3px rgba(255, 255, 255, 0.3) inset, 5px -5px 3px -3px rgba(0, 0, 0, 0.3) inset, 0 0 1px 1px rgba(0, 0, 0, 0.3);
}
.button_a {
  background-color: #006f31;
}
.button_b {
  background-color: #c92112;
}
.options {
  margin-top: 100rpx;
  display: flex;
  justify-content: center;
}
.options .btn {
  margin: 0 20rpx;
  box-shadow: -3px 3px 8px rgba(0, 0, 0, 0.2) inset, 3px -3px 8px rgba(255, 255, 255, 0.2) inset; 
}
.start, .select {
  width: 150rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #fff;
  border-radius: 20rpx;
  text-align: center;
  background-color: #656565;
  box-shadow: 4px -4px 6px rgba(0, 0, 0, 0.3) inset, -4px 4px 6px rgba(255, 255, 255, 0.3) inset, 0 0 1px 2px rgba(0, 0, 0, 0.6), -5px 5px 2px rgba(0, 0, 0, 0.6);
}
.start:active,
.select:active{
  box-shadow: 4px -4px 6px rgba(0, 0, 0, 0.3) inset, -4px 4px 6px rgba(255, 255, 255, 0.3) inset, 0 0 1px 2px rgba(0, 0, 0, 0.6);
}
